---
// src/pages/wiedza/dla-lekarzy/index.astro
import WiedzaSection from "@/layouts/WiedzaSection.astro";
import { getCollection } from "astro:content";

// Get all medical articles
const medicalArticles = await getCollection("medical");

// Title and description for this section
const title = "Strefa Medyczna";
const description = "Materiały edukacyjne i kliniczne dla lekarzy dotyczące zastosowania konopi w medycynie";
---

<WiedzaSection 
  title={title}
  description={description}
  collection={medicalArticles}
  articleUrlPrefix="/wiedza/dla-lekarzy"
  accentColor="secondary"
/>