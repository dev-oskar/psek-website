---
// src/pages/wiedza/dla-biznesu/index.astro
import WiedzaSection from "@/layouts/WiedzaSection.astro";
import { getCollection } from "astro:content";

// Get all business articles
const businessArticles = await getCollection("business");

// Title and description for this section
const title = "Strefa Biznesu";
const description = "Materiały dotyczące przemysłowego zastosowania konopi dla przedsiębiorców";
---

<WiedzaSection 
  title={title}
  description={description}
  collection={businessArticles}
  articleUrlPrefix="/wiedza/dla-biznesu"
  accentColor="primary"
/>