---
// src/pages/wiedza/dla-pacjenta/index.astro
import WiedzaSection from "@/layouts/WiedzaSection.astro";
import { getCollection } from "astro:content";

// Get all patient articles
const patientArticles = await getCollection("patient");

// Title and description for this section
const title = "Strefa Pacjenta";
const description = "Wiedza i porady dotyczące konopi dla pacjentów";
---

<WiedzaSection 
  title={title}
  description={description}
  collection={patientArticles}
  articleUrlPrefix="/wiedza/dla-pacjenta"
  accentColor="primary"
/>