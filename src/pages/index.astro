---
import Section from "@/components/core/Section.astro";
import Features from "@/components/Features.astro";
// import Testimonial from "@/components/Testimonial.astro";
import Base from "@/layouts/Base.astro";
// import Cta from "@/layouts/partials/Cta.astro";
import { getEntry } from "astro:content";

const homepage = await getEntry("homepage", "index");
// console.log(homepage);
const { banner, sections, features, testimonial } = homepage.data;
// const call_to_action = homepage.data.call_to_action;
---

<Base>
  <!-- banner -->
  <section class="lg:mb-10 animate-fade-in">
    <Section section={banner} />
  </section>
  <!-- multi section -->
  {
    sections && (
      <section class="multi-section">
        {sections.map((section) => (
          <Section section={section} />
        ))}
      </section>
    )
  }
  <!-- key features -->
  <Features features={features} />
  <!-- testimonial -->
  <!-- <Testimonial testimonial={testimonial} /> -->
  <!-- call to action -->
  <!-- <Cta {...call_to_action} /> -->
  
  <!-- contact section -->
  <section id="contact" class="section pt-0">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center mb-8">
          <h2 class="section-title">Skontaktuj się z nami</h2>
          <p class="mt-3 text-lg">Masz pytania lub sugestie? Skorzystaj z formularza kontaktowego.</p>
        </div>
        <div class="md:col-12 md:order-1 grid place-content-center">
          <form
            class="lg:max-w-[484px]"
            action="#"
            method="POST"
          >
            <div class="form-group mb-5">
              <label class="form-label" for="name">Imię i nazwisko</label>
              <input
                class="form-control"
                type="text"
                id="name"
                placeholder="Twoje imię i nazwisko"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="email">Adres email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                placeholder="Twój adres email"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="reason">Powód kontaktu</label>
              <select name="reason" id="reason" class="form-select" required>
                <option value="">Wybierz powód kontaktu</option>
                <option value="hello">Pytanie ogólne</option>
                <option value="business">Współpraca biznesowa</option>
                <option value="medical">Zapytanie medyczne</option>
                <option value="event">Organizacja wydarzenia</option>
                <option value="other">Inne</option>
              </select>
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="message">Wiadomość</label>
              <textarea
                class="form-control h-[150px]"
                id="message"
                placeholder="Twoja wiadomość..."
                cols="30"
                rows="10"></textarea>
            </div>
            <input
              class="btn-primary block w-full"
              type="submit"
              value="Wyślij wiadomość"
            />
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>
