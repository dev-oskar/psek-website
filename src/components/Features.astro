---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import HomepageFeature from "@/components/react/HomepageFeature";
const { features } = Astro.props;
const { title, description, feature_list } = features;
---

<section class="section key-feature relative">
  <div class="container equal-width-container bg-surface/50 dark:bg-surface/30 backdrop-blur-md rounded-lg shadow-lg p-8 border border-primary/10 dark:border-primary/5">
    <div class="row text-center">
      <div class="col-12">
        <h1 class="text-center" set:html={markdownify(title)} />
      </div>
      <div class="mt-4 col-12 text-text-secondary">
        <p class="text-center text-sm md:text-base max-w-2xl mx-auto" set:html={markdownify(description)} />
      </div>
    </div>
    <HomepageFeature feature_list={feature_list} client:load />
  </div>
</section>
